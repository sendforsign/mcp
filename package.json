{
  "name": "@sendforsign/mcp",
  "version": "1.0.0",
  "description": "MCP server for SendForSign (templates list/read) with stdio transport",
  "type": "module",
  "bin": {
    "sendforsign-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "publish": "npm run build && npm publish",
    "publish-beta": "npm run build && npm publish --tag beta"
  },
  
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sendforsign/mcp.git"
  },
  "homepage": "https://github.com/sendforsign/mcp#readme",
  "bugs": {
    "url": "https://github.com/sendforsign/mcp/issues"
  },
  "author": "SendForSign",
  "license": "MIT",
  "keywords": [
    "mcp",
    "sendforsign",
    "templates",
    "cli"
  ],
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.17"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "fastmcp": "^3.18.0",
    "undici": "^6.19.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
